<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    tools:context="com.example.harishsekar.herome2.Fragments.BlankFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="567dp"
        android:backgroundTint="@android:color/black"
        android:orientation="vertical"
        android:weightSum="5">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar5"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/justice_leauge_logo"
            android:backgroundTint="@android:color/holo_red_dark"
            android:minHeight="40dp"
            android:theme="?attr/actionBarTheme" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/hero_bg_gradient">

            <Button
                android:id="@+id/choosebt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="52dp"
                android:text="Choose Characters"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.477"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wwbt"
                app:layout_constraintVertical_bias="0.222" />

            <Button
                android:id="@+id/batbt"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="89dp"
                android:drawableLeft="?android:attr/fastScrollTrackDrawable"
                android:text="Batman   "
                app:layout_constraintHorizontal_bias="0.348"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/superbt"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/superbt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="46dp"
                android:text="SuperMan   "
                app:layout_constraintBaseline_toBaselineOf="@+id/batbt"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:id="@+id/flashbt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="42dp"
                android:text="Flash   "
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/batbt" />

            <Button
                android:id="@+id/wwbt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:text="WW   "
                app:layout_constraintBaseline_toBaselineOf="@+id/flashbt"
                app:layout_constraintHorizontal_bias="0.532"
                app:layout_constraintLeft_toRightOf="@+id/flashbt"
                app:layout_constraintRight_toRightOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</FrameLayout>
